{
  "name": "DS_CLI",
// # 自定义镜像已包含
// #  softs: homebrew 、fish 、fisher、fzf、ranger、lua、luarocks、gh、git-lfs、nvm、pnpm、yarn
// #  NodeJS: 14.20.0(default)、16.16.0
  "image": "lstheart/codespace:latest",
  // life scripts
  "initializeCommand": "sudo chmod -R 755 .devcontainer/scripts/ && mkdir -p .devcontainer/logs",
  "onCreateCommand": ".devcontainer/scripts/onCreate.sh > .devcontainer/logs/onCreate.log",
  "updateContentCommand": ".devcontainer/scripts/updateContent.sh > .devcontainer/logs/updateContent.log",
  "postCreateCommand": ".devcontainer/scripts/postCreate.sh > .devcontainer/logs/postCreate.log",
  "postStartCommand": ".devcontainer/scripts/postStart.sh > .devcontainer/logs/postStart.log",
  "features": {
    // "docker-in-docker": "latest"
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        // "eamodio.gitlens",
        // "ms-vsliveshare.vsliveshare",
        // "visualstudioexptteam.vscodeintellicode",
        // "angular.ng-template",
        // "johnpapa.angular2",
        // "cyrilletuzi.angular-schematics",
        // "redhat.vscode-yaml",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "extensions.ignoreRecommendations": true,
        "gitlens.showWelcomeOnInstall": false,
        "gitlens.showWhatsNewAfterUpgrades": false
      }
    }
  }
}